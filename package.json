{
  "name": "scottdejonge",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/scottdejonge/scottdejonge"
  },
  "dependencies": {
    "bigfishtv-turret": "^3.1.0",
    "less": "^2.5.1"
  },
  "devDependencies": {
    "watch": "^0.13.0",
    "browserify": "^10.2.6",
    "browserify-shim": "^3.8.9",
    "uglify-js": " ^2.4.23",
    "browser-sync": "^2.7.13"
  },
  "scripts": {
    "sync": "browser-sync start --proxy \"dev.scottdejonge\" --files \"generated/styles/*.css\"",
    "watch:styles": "watch \"npm run build:styles\" \"styles\"",
    "watch": "npm run watch:styles & npm run sync",
    "build:styles": "lessc -s --include-path=\"node_modules/bigfishtv-turret\" styles/styles.less > generated/styles/styles.css",
    "build": "npm run build:styles",
    "deploy:styles": "lessc -x --include-path=\"node_modules/bigfishtv-turret\" styles/styles.less > generated/styles/styles.css",
    "deploy": "npm run deploy:styles"
  }
}